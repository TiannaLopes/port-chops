  "grammar": [
    {
      "title": "Gender Agreement with 1 and 2",
      "content": "The numbers 'um/uma' (one) and 'dois/duas' (two) change based on the gender of the noun they modify.",
      "examples": [
        "um livro (one book - masculine)",
        "uma casa (one house - feminine)",
        "dois carros (two cars - masculine)",
        "duas pessoas (two people - feminine)"
      ]
    },
    {
      "title": "Number Patterns",
      "content": "Notice the pattern from 16-19: 'dez' (ten) + 'e' (and) + the single digit. Example: dezasseis = dez + e + seis (ten and six).",
      "examples": [
        "16 = dezasseis (dez + e + seis)",
        "17 = dezassete (dez + e + sete)",
        "18 = dezoito (dez + e + oito)",
        "19 = dezanove (dez + e + nove)"
      ]
    }
  ],
